<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommercial_mvc</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/web.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom border-dark ">
            <div class="container">
                <button class="navbar-toggler"
                        type="button"
                        data-mdb-toggle="collapse"
                        data-mdb-target="#navbarNavAltMarkup"
                        aria-controls="navbarNavAltMarkup"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><span>E-Commercial</span></a>
                <!-- Dropdown -->
                <div class=" navbar dropdown icon ">
                    <a class="nav-link"
                       href="!#"
                       id="navbarDropdownMenuLink"
                       role="button"
                       data-mdb-toggle="dropdown"
                       aria-expanded="false">
                        <i class="text-dark fas fa-shopping-cart"></i>
                        <span class="badge rounded-pill badge-notification bg-light text-dark">1</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end shopping-cart" aria-labelledby="navbarDropdownMenuLink">
                    </ul>
                    <a class="text-dark nav-link dropdown-toggle"
                       href="/#"
                       id="navbarDropdownMenuLink"
                       role="button"
                       data-mdb-toggle="dropdown"
                       aria-expanded="false">
                        <i class="text-dark ">Admin</i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end border border-4 rounded" aria-labelledby="navbarDropdownMenuLink">
                        <li><a asp-controller="Product" asp-action="Create">Lägg till produkt</a></li>
                        <li><a asp-controller="Order" asp-action="Index" class="dropdown-item">Order</a></li>
                    </ul>
                </div>
                <div class="mx-3 collapse navbar-collapse" id="navbarNavAltMarkup">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a asp-controller="Product" asp-action="Index" class="nav-link text-dark">Produkter</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark">Om oss</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Ecommercial_mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.6.0/mdb.min.js"></script>    
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

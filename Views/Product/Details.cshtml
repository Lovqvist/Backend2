@model Ecommercial_mvc.Models.Product

@{
    ViewData["Title"] = "Details";
}

<div class="container my-3 py-5">
    
    <div class="text-center">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <img src=@Html.DisplayFor(model => model.Image) alt="..." class="img-fluid" />
            </div>

            <div class="col-lg-6 text-center text-lg-start">
                <h3 class="fw-bold"> @Html.DisplayFor(model => model.Name)</h3>
                <h4 class="fw-lighter fst-italic"> @Html.DisplayFor(model => model.Price) kr</h4>
                <p>@Html.DisplayFor(model => model.LongDescription)</p>
                <div class="input-group m-auto justify-content-center justify-content-lg-start align-items-center">
                    <input type="number" class="text-center form-control" aria-label="Quantity" aria-describedby="button-addon2" />
                    <button class="btn btn-outline-secondary" type="button">
                       
        
                        <i class="text-dark fas fa-shopping-cart"></i> Lägg i varukorgen
                    </button>
                </div>
            </div>
        </div>
    </div>
 
</div>

<div>
    <a asp-action="Index">Tillbaka</a>
</div>
